@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

@prefix lpd:       <https://discovery.linkedpipes.com/vocabulary/> .

@prefix transformer:  <https://discovery.linkedpipes.com/resource/transformer/wikidata-date-of-birth-date-of-burial-to-wikidata-start-time-end-time/> .
@prefix configuration-vocabulary:  <https://discovery.linkedpipes.com/vocabulary/transformer/wikidata-date-of-birth-date-of-burial-to-wikidata-start-time-end-time/configuration/> .

transformer:template a lpd:TransformerTemplate ;
  dcterms:title "Wikidata date of birth (P569) and date of burial (P4602) to Wikidata start date (P580) and end date (P582)"@en;
  lpd:componentConfigurationTemplate transformer:defaultConfiguration ;
  lpd:inputTemplate transformer:input ;
  lpd:outputTemplate transformer:output ;
  lpd:feature transformer:feature .
  
configuration-vocabulary:Configuration a rdfs:Class ;
  rdfs:label "Class of configurations of Wikidata date of birth (P569) and date of burial (P4602) to Wikidata start date (P580) and end date (P582)"@en;
  rdfs:subClassOf lpd:ComponentConfiguration .
  
transformer:defaultConfiguration a configuration-vocabulary:Configuration ;
  dcterms:title "Default configuration" ;
  lpd:query  """
PREFIX wdt: <http://www.wikidata.org/prop/direct/>

DELETE {
  ?s wdt:P569 ?startTime .
 
  ?s wdt:P4602 ?endTime .
}
INSERT {
  ?s wdt:P580 ?startTime .
 
  ?s wdt:P582 ?endTime .
} 
WHERE {
  {
    ?s wdt:P569 ?startTime .
  } UNION {
    ?s wdt:P4602 ?endTime .
  }
}
  """ ;
  lpd:configurationQuery """
    PREFIX dcterms: <http://purl.org/dc/terms/>
    PREFIX lpd: <https://discovery.linkedpipes.com/vocabulary/>
    PREFIX configuration-vocabulary: <https://discovery.linkedpipes.com/vocabulary/transformer/wikidata-date-of-birth-date-of-burial-to-wikidata-start-time-end-time/configuration/>
    
    CONSTRUCT {
      ?config a configuration-vocabulary:Configuration ;
        lpd:query ?query ;
        dcterms:title ?title .
    } WHERE {
      ?config a configuration-vocabulary:Configuration .
      OPTIONAL { ?config lpd:query ?query . }
      OPTIONAL { ?config dcterms:title ?title . }
    }
  """ .

transformer:input a lpd:InputDataPortTemplate ;
  dcterms:title "Triples with Wikidata date of birth (P569) and date of burial (P4602)" .
  
transformer:output a lpd:OutputDataPortTemplate ;
  dcterms:title "Triples with Wikidata start date (P580) and end date (P582)" .
  
transformer:feature a lpd:MandatoryFeature ;
  dcterms:title "Transforms Wikidata date of birth (P569) and date of burial (P4602) to Wikidata start date (P580) and end date (P582)" ;
  lpd:descriptor transformer:descriptor .
  
transformer:descriptor a lpd:Descriptor ;
  lpd:query """
PREFIX wdt: <http://www.wikidata.org/prop/direct/>

ASK {
  {
    ?s wdt:P569 ?startTime .
  } UNION {
    ?s wdt:P4602 ?endTime .
  }
}
  """ ;
  lpd:appliesTo transformer:input .